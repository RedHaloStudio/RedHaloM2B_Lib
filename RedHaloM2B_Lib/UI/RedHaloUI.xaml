<UserControl
    x:Class="RedHaloM2B.UI.RedHaloUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RedHaloM2B.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid x:Name="RedHaloUILayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Image
                Grid.Row="0"
                VerticalAlignment="Center"
                Source="/RedHaloM2B;component/images/RH_M2B_LOGO.jpg" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="10"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                x:Name="rb1"
                Width="140"
                Background="Azure"
                Foreground="White"
                IsChecked="True">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="30"
                        VerticalAlignment="Center"
                        Source="/RedHaloM2B;component/images/clock-fast.png" />
                    <TextBlock
                        Margin="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="FAST" />
                </StackPanel>
            </RadioButton>
            <RadioButton
                x:Name="rb2"
                Width="140"
                Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="30"
                        VerticalAlignment="Center"
                        Source="/RedHaloM2B;component/images/Slow.png" />
                    <TextBlock
                        Margin="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="SLOW" />
                </StackPanel>
            </RadioButton>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="10"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                Width="140"
                Foreground="White"
                IsChecked="True">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <Image
                        Width="30"
                        VerticalAlignment="Center"
                        Source="/RedHaloM2B;component/images/all.png" />
                    <TextBlock
                        Margin="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="ALL" />
                </StackPanel>
            </RadioButton>
            <RadioButton Width="140" Foreground="White">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <Image
                        Width="30"
                        VerticalAlignment="Center"
                        Source="/RedHaloM2B;component/images/check-selected.png" />
                    <TextBlock
                        Margin="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="SELECTED" />
                </StackPanel>
            </RadioButton>
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="10"
            VerticalAlignment="Center">
            <Button
                Width="150"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FF313131"
                Click="Button_Click"
                FontWeight="Bold"
                Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="20"
                        Margin="10,0"
                        Source="/RedHaloM2B;component/images/export.png" />
                    <TextBlock x:Name="export_btn" VerticalAlignment="Center">EXPORT</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
